{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build:Dev",
      "type": "shell",
      "command": "${workspaceFolder}/build.dev.sh ${input:selectService}",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": []
    },
    {
      "label": "Build:Prod",
      "type": "shell",
      "command": "${workspaceFolder}/build.prod.sh ${input:selectService}",
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "problemMatcher": []
    }
  ],

  "inputs": [
    {
      "id": "selectService",
      "type": "pickString",
      "description": "What container to rebuild?",
      "options": [
        { "label": "All", "value": "" },
        "web-app-1",
        "server-app-1",
        "nginx"
      ]
    },
    {
      "id": "selectEnv",
      "type": "pickString",
      "description": "What environment?",
      "options": ["production", "uat", "staging", "local", "all"]
    }
  ]
}
